package calculatorjavafx;

public class CalculatorJavaFXModel {
    public double calculate(double num1, double num2, String operator) {
        switch (operator) {
            case "+": return num1 + num2;
            case "-": return num1 - num2;
            case "*": return num1 * num2;
            case "/": return num2 != 0 ? num1 / num2 : Double.POSITIVE_INFINITY;
            case "%": return num2 != 0 ? num1 % num2 : Double.POSITIVE_INFINITY;
            default: return 0;
        }
    }
}